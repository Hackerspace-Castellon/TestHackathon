<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestHackathon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- quitar barra de arriba -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowBackground">@color/yellow_background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_pocho</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red_pocho</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme. -->
    <style name="Theme.TestHackathon.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red_pocho</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_a_round</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.TestHackathon</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/red_pocho</item>
        <item name="android:navigationBarColor">@color/red_pocho</item>
    </style>
</resources>